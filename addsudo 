from pyrogram import Client, filters

API_ID = 123456  # apna api_id likho
API_HASH = "your_api_hash"
BOT_TOKEN = "your_bot_token"

# Pehle se sudo list me apna ID likho
sudo_users = [123456789]

app = Client("addsudo_bot", api_id=API_ID, api_hash=API_HASH, bot_token=BOT_TOKEN)


@app.on_message(filters.command("addsudo") & filters.user(sudo_users))
async def addsudo(_, message):
    # Command syntax check
    if len(message.command) < 2:
        return await message.reply_text("âš ï¸ Usage: `/addsudo user_id`")

    try:
        # user_id ko integer me convert karte hain
        user_id = int(message.command[1])

        if user_id in sudo_users:
            await message.reply_text("âœ… User already in sudo list.")
        else:
            sudo_users.append(user_id)
            await message.reply_text(f"âœ… Added `{user_id}` to sudo users.")
            print(f"SUDO ADDED: {user_id}")

    except ValueError:
        await message.reply_text("âŒ Invalid user ID! (Only numbers allowed)")


@app.on_message(filters.command("start"))
async def start(_, message):
    await message.reply_text("ðŸ¤– Bot online! Use `/addsudo user_id`")


print("Bot started!")
app.run()
